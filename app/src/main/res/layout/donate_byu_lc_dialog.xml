<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/donate"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/donate_buy_lc_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@drawable/donate_put_money_bg"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/donate_buy_lc_dialog"
            android:visibility="visible"
            android:layout_width="229dp"
            android:layout_height="205dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/donate_put_money_dialog_bg">

            <EditText
                android:id="@+id/donate_buy_lc_email_input"
                android:textSize="@dimen/_10sdp"
                android:layout_width="189dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/donate_put_money_dialog_input"
                android:completionThreshold="2"
                android:fontFamily="@font/pt_root_ui_regular"
                android:imeOptions="flagNoExtractUi|actionSend"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingLeft="@dimen/_10sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/text_cursor"
                android:hint="Введите Ваш e-mail"
                android:textIsSelectable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/donate_buy_lc_sum_input"
                android:textSize="@dimen/_10sdp"
                android:layout_width="189dp"
                android:layout_height="30dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/donate_put_money_dialog_input"
                android:completionThreshold="2"
                android:fontFamily="@font/pt_root_ui_regular"
                android:imeOptions="flagNoExtractUi|actionSend"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingLeft="@dimen/_10sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/text_cursor"
                android:digits="\ 1234567890"
                android:hint="Введите сумму"
                android:textIsSelectable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donate_buy_lc_email_input" />

            <CheckBox
                android:id="@+id/donate_buy_lc_i_am_not_robot_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/pt_root_ui_regular"
                android:text="Я не робот"
                android:buttonTint="#004362"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donate_buy_lc_sum_input" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/donate_buy_lc_buy_btn"
                android:visibility="gone"
                android:layout_width="189dp"
                android:layout_height="@dimen/_25sdp"
                android:backgroundTint="#66bb6a"
                android:includeFontPadding="false"
                android:text="Пополнить"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donate_buy_lc_i_am_not_robot_checkbox" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/donate_buy_lc_buy_via_qiwi_btn"
                android:layout_width="189dp"
                android:layout_height="@dimen/_25sdp"
                android:backgroundTint="#66bb6a"
                android:includeFontPadding="false"
                android:text="Пополнить"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donate_buy_lc_i_am_not_robot_checkbox" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/donate_byu_lc_cancel_btn"
                android:layout_width="189dp"
                android:layout_height="@dimen/_25sdp"
                android:backgroundTint="#ffca28"
                android:includeFontPadding="false"
                android:text="назад"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donate_buy_lc_buy_via_qiwi_btn" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>